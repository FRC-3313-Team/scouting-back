    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "strictNullChecks": true
